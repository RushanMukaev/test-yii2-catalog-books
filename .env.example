# Environment Configuration для Yii2 Books Catalog
# Скопируйте этот файл в .env и настройте под свое окружение

# Режим приложения
APP_ENV=development
APP_DEBUG=true

# База данных MySQL
DB_HOST=db
DB_PORT=3306
DB_NAME=yii2_books
DB_USER=yii2
DB_PASSWORD=yii2_secure_password_here
DB_ROOT_PASSWORD=root_secure_password_here

# Порты для доступа
NGINX_PORT=8080

# Часовой пояс
TIMEZONE=Europe/Moscow

# Yii2 Cookie Validation Key (генерируется автоматически при первом запуске)
# Можно сгенерировать через: openssl rand -base64 32
COOKIE_VALIDATION_KEY=

# SMS Pilot API
# Для тестирования используйте ключ эмулятора
SMSPILOT_API_KEY=XXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZXXXXXXXXXXXXYYYYYYYYYYYYZZZZZZZZ

# Безопасность
SESSION_LIFETIME=3600
CSRF_ENABLED=true

# Email настройки (опционально)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_EMAIL=noreply@example.com
MAIL_FROM_NAME="Yii2 Books Catalog"