# MySQL 8.4 конфигурация для Yii2 приложения

[mysqld]
# Основные настройки
default-storage-engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Настройки производительности
max_connections = 200
max_allowed_packet = 64M

# InnoDB настройки
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query cache (отключен в MySQL 8+, используется буферный пул)
# Вместо этого полагаемся на InnoDB buffer pool

# Бинарные логи (для репликации, можно отключить в dev)
skip-log-bin

# Режим SQL (строгий для избежания неявных ошибок)
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Логирование медленных запросов (для оптимизации)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Временные таблицы
tmp_table_size = 64M
max_heap_table_size = 64M

# Сортировка и группировка
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# Общие настройки
table_open_cache = 4000
table_definition_cache = 2000

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4